<presentation>
	<viewbox x="0" y="0" width="100" height="100"/>
	<styles>
		<style name="h1"      font-opt="s20 bold underline" font-name="Tahoma" options=""/>
		<style name="h2"      font-opt="s18 bold underline" font-name="Tahoma" options=""/>
		<style name="h3"      font-opt="s16 bold underline" font-name="Tahoma" options=""/>
		<style name="cite"    font-opt="s16 italic"         font-name="Tahoma" options=""/>
		<style name="default" font-opt="s14"                font-name="Tahoma" options=""/>
		<style name="code"    font-opt="s14"                font-name="Consolas" options=""/>
	</styles>
	<part name="introduction" steps="true">
		<text step="1" style="h1"      x="00" y="00.0" w="100" h="05" content="introduction"/>
		<text step="2" style="h2"      x="00" y="07.5" w="100" h="05" content="introduction/what"/>
		<text step="3" style="cite"    x="05" y="12.5" w="095" h="20" content="introduction/cite"/>
		<text step="4" style="h2"      x="00" y="20.0" w="100" h="05" content="introduction/advantages"/>

		<list step="5" x="00" y="27.5" w="20" h="65">
			<item step="1" style="h3" content="introduction/simplicity"/>
			<item step="2" style="h3" content="introduction/builtins"/>
			<item step="3" style="h3" content="introduction/hotkeys"/>
			<item step="4" style="h3" content="introduction/automation"/>
			<item step="5" style="h3" content="introduction/advanced"/>
		</list>

		<list step="5" x="25" y="27.5" w="75" h="65" marker="double-arrow">
			<item step="1" style="default" content="introduction/simplicity/1"/>
			<item step="1" style="default" content="introduction/simplicity/2"/>
			<item step="1" style="default" content="introduction/simplicity/3"/>
			<item step="1" style="default" content="introduction/simplicity/4"/>

			<item step="2" style="default" content="introduction/builtins/1"/>

			<item step="3" style="default" content="introduction/hotkeys/1"/>
			<item step="3" style="default" content="introduction/hotkeys/2"/>
			<item step="3" style="default" content="introduction/hotkeys/3"/>

			<item step="4" style="default" content="introduction/automation/1"/>
			<item step="4" style="default" content="introduction/automation/2"/>

			<item step="5" style="default" content="introduction/advanced/1"/>
		</list>
	</part>
	<part name="version-history" steps="true">
		<text    step="1" style="h1" x="00" y="0.0" w="100" h="5" content="version-history"/>
		<!--picture step="2" x="00" y="7.5">C:\Dokumente und Einstellungen\___\Desktop\gFS\resources\diagram.png</picture-->
		<!--browser step="2" x="00" y="7.5" w="100" h="90" resource="versions.svg"/-->
	</part>
	<part name="usage-cases"/>
	<part name="script-structure" steps="true">
		<text   step="1" style="h1"      x="00" y="00.0" w="100" h="05.0" content="script-structure"/>
		<text   step="2" style="h2"      x="00" y="07.5" w="100" h="05.0" content="script-structure/file"/>
		<text   step="3" style="default" x="05" y="12.5" w="075" h="07.5" content="script-structure/file/text"/>
		<button step="3" style="default" x="05" y="20.0" w="020" h="05.0" content="create-script">
			<event name="click" handler-type="function" handler="RunEditor"/>
		</button>
		<text   step="4" style="h2"      x="00" y="30.0" w="100" h="05" content="script-structure/auto-execute"/>
		<text   step="5" style="default" x="05" y="35.0" w="075" h="20" content="script-structure/auto-execute/text"/>

		<part name="variables" steps="true">
			<text	step="1" style="h2"      x="00" y="00.0" w="100" h="05" content="script-structure/variables"/>
			<text	step="2" style="default" x="05" y="05.0" w="095" h="15" content="script-structure/variables/text"/>
			<hiedit	step="3" style="code"    x="05" y="20.0" w="095" h="10" highlight="true">test := myVar ; leerer String&#10;number := 5&#10;text := "test"</hiedit>
		</part>

		<part name="functions" steps="true">
			<text 	step="1" style="h2"      x="00" y="00.0" w="100" h="05" content="script-structure/functions"/>
			<text 	step="2" style="default" x="05" y="05.0" w="095" h="20" content="script-structure/functions/text"/>
			<hiedit step="3" style="code"    x="05" y="10.0" w="095" h="10" highlight="true">PI := 3.141593&#10;sinus := sin(PI)</hiedit>
			<text 	step="4" style="h3"      x="00" y="25.0" w="100" h="05" content="script-structure/functions/UDF"/>
			<text 	step="5" style="default" x="05" y="30.0" w="095" h="10" content="script-structure/functions/UDF/text"/>
			<executableCode step="6" style="code"    x="05" y="37.5" w="095" h="15">
Hello()
{
	MsgBox Hello
}

Hello()
			</executableCode>
		</part>
		<part name="commands" steps="true">
			<text 	step="1" style="h2"      x="00" y="00.0" w="100" h="05" content="script-structure/commands"/>
			<text 	step="2" style="default" x="05" y="05.0" w="095" h="15" content="script-structure/commands/text"/>
			<text 	step="3" style="h3"      x="00" y="20.0" w="100" h="05" content="script-structure/commands/differences"/>
			<list   step="4" style="default" x="05" y="25.0" w="095" h="10" steps="true" marker="number" marker-suffix=".">
				<item content="script-structure/commands/differences/syntax"/>
				<item content="script-structure/commands/differences/variables"/>
				<item content="script-structure/commands/differences/user-defined"/>
			</list>
			<executableCode step="5" style="code"    x="05" y="40.0" w="095" h="15">
text := &quot;test&quot;
MsgBox, 64, AutoHotkey, %text%

; MsgBox(64, &quot;AutoHotkey&quot;, text) ; AutoHotkey v2
			</executableCode>
		</part>
	</part>
	<part name="functionality">
		<part name="gui"/>
		<part name="hotkeys"/>
		<part name="automation"/>
		<part name="extensibility"/>
	</part>
	<part name="programs"/>
	<part name="community"/>
	<part name="end"/>
</presentation>